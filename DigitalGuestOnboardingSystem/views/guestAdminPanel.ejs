<body>
    <h1>Guest Admin Panel</h1>
    <table>
        <thead>
            <tr>
                <th>Hotel Name</th>
                <th>Full Name</th>
                <th>Mobile Number</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% guests.forEach(guest => { %>
                <tr>
                    <td><%= guest.hotelName %></td>
                    <td><%= guest.fullName %></td>
                    <td><%= guest.mobileNumber %></td>
                    <td><%= guest.address %></td>
                    <td>
                        <a href="/admin/guest/edit/<%= guest._id %>">Edit</a> | 
                        <a href="/admin/guest/view/<%= guest._id %>" target="_blank">View</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
